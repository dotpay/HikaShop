<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.1" method="upgrade" group="hikashoppayment">
	<name>Dotpay Payment Plugin</name>
	<creationDate>2015-08-24</creationDate>
	<version>1.0.1</version>
	<author>Piotr Galas</author>
	<authorEmail>piotr.galas@akra.net</authorEmail>
	<authorUrl>http://akra.net/</authorUrl>
	<copyright>(C) 2015 Akra. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>PLG_DOTPAY_CONF_DESCRIPTION</description>
	<files>
		<filename plugin="dotpay">dotpay.php</filename>
		<filename>dotpay_end.php</filename>
        <filename>index.html</filename>
        <folder>media</folder>
	</files>

    <media folder="media" destination="com_hikashop/images/payment/dotpay">
        <filename>dotpay.png</filename>
    </media>

    <languages folder="language">
        <language tag="pl-PL">pl-PL/pl-PL.plg_hikashoppayment_dotpay.ini</language>
        <language tag="pl-PL">pl-PL/pl-PL.plg_hikashoppayment_dotpay.sys.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_hikashoppayment_dotpay.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_hikashoppayment_dotpay.sys.ini</language>
    </languages>


	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
			</fieldset>
		</fields>
	</config>
</extension>